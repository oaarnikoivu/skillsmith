{
  "openapi": "3.1.0",
  "info": {
    "title": "Segmented Demo API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.segmented.example"
    }
  ],
  "paths": {
    "/clubs": {
      "get": {
        "operationId": "list_clubs",
        "summary": "List clubs",
        "tags": ["clubs"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ClubOut"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/clubs/{clubId}": {
      "get": {
        "operationId": "get_club",
        "summary": "Get club",
        "tags": ["clubs"],
        "parameters": [
          {
            "name": "clubId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClubDetailsOut"
                }
              }
            }
          }
        }
      }
    },
    "/tournaments": {
      "get": {
        "operationId": "list_tournaments",
        "summary": "List tournaments",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TournamentOut"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddressOut": {
        "type": "object",
        "required": ["city"],
        "properties": {
          "city": {
            "type": "string"
          }
        }
      },
      "ClubDetailsOut": {
        "type": "object",
        "required": ["id", "name", "address"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "address": {
            "$ref": "#/components/schemas/AddressOut"
          }
        }
      },
      "ClubOut": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "TournamentOut": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}
